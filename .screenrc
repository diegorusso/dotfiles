# Execute a shell when a screen terminal is open
shell -$SHELL

# Disable the startup message
startup_message off

# Set a large scrollback buffer
defscrollback 32000

# Always start `screen` with UTF-8 enabled (`screen -U`)
defutf8 on

# Change the command character to ctrl-b
escape ^Bb

# Automatically detach all windows on hangup
autodetach on
